<form theme="dark">
  <label>TP-link Smart Energy Meter Steckdosen</label>
  <description>If you don't see any data here, please go to "Settings" &gt; "Data inputs" &gt; "TP Link Steckdosen TA" and configure a modular input for each smart plug.</description>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" searchWhenChanged="true" token="global_time_tok">
      <label>Time Range</label>
      <default>
        <earliest>-1h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="span" searchWhenChanged="true">
      <label>Time Span</label>
      <choice value="auto">auto</choice>
      <choice value="5s">5s</choice>
      <choice value="10s">10s</choice>
      <choice value="30s">30s</choice>
      <choice value="1m">1m</choice>
      <choice value="5m">5m</choice>
      <choice value="10m">10m</choice>
      <choice value="30m">30m</choice>
      <choice value="1h">1h</choice>
      <default>10s</default>
      <change>
        <eval token="timechart_span">if($value$ == "auto", "", "span=".$value$)</eval>
        <eval token="mstats_span">"span=".$value$</eval>
      </change>
      <initialValue>10s</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>tplink.hs110.voltage</title>
        <search>
          <query>| mstats avg("tplink.hs110.voltage") prestats=true WHERE "index"="tplink_metrics" $mstats_span$ BY inputname
| timechart avg("tplink.hs110.voltage") $timechart_span$ useother=false BY inputname 
| foreach * [eval &lt;&lt;FIELD&gt;&gt;=round('&lt;&lt;FIELD&gt;&gt;',2)]
| fields - _span*</query>
          <earliest>$global_time_tok.earliest$</earliest>
          <latest>$global_time_tok.latest$</latest>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.fieldColors">{"Avg":"#1e93c6","10.11.12.30":"#1e93c6"}</option>
        <option name="charting.fieldDashStyles">{"Avg":"solid","10.11.12.30":"solid"}</option>
        <option name="charting.gridLinesX.showMajorLines">1</option>
        <option name="charting.legend.mode">seriesCompare</option>
        <option name="displayview">analytics_workspace</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>tplink.hs110.total</title>
        <search>
          <query>| mstats avg("tplink.hs110.total") prestats=true WHERE "index"="tplink_metrics" $mstats_span$ BY inputname
| timechart avg("tplink.hs110.total") $timechart_span$ useother=false BY inputname
| fields - _span*</query>
          <earliest>$global_time_tok.earliest$</earliest>
          <latest>$global_time_tok.latest$</latest>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisY.abbreviation">auto</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.fieldColors">{"Avg":"#1e93c6","10.11.12.30":"#1e93c6"}</option>
        <option name="charting.fieldDashStyles">{"Avg":"solid","10.11.12.30":"solid"}</option>
        <option name="charting.gridLinesX.showMajorLines">1</option>
        <option name="charting.legend.mode">seriesCompare</option>
        <option name="displayview">analytics_workspace</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>tplink.hs110.power</title>
        <search>
          <query>| mstats avg("tplink.hs110.power") prestats=true WHERE "index"="tplink_metrics" $mstats_span$ BY inputname
| timechart avg("tplink.hs110.power") $timechart_span$ useother=false BY inputname
| fields - _span*</query>
          <earliest>$global_time_tok.earliest$</earliest>
          <latest>$global_time_tok.latest$</latest>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisY.abbreviation">auto</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.fieldColors">{"Avg":"#1e93c6","10.11.12.30":"#1e93c6"}</option>
        <option name="charting.fieldDashStyles">{"Avg":"solid","10.11.12.30":"solid"}</option>
        <option name="charting.gridLinesX.showMajorLines">1</option>
        <option name="charting.legend.mode">seriesCompare</option>
        <option name="displayview">analytics_workspace</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>tplink.hs110.current</title>
        <search>
          <query>| mstats avg("tplink.hs110.current") prestats=true WHERE "index"="tplink_metrics" $mstats_span$ BY inputname
| timechart avg("tplink.hs110.current") $timechart_span$ useother=false BY inputname
| fields - _span*</query>
          <earliest>$global_time_tok.earliest$</earliest>
          <latest>$global_time_tok.latest$</latest>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisY.abbreviation">auto</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.fieldColors">{"Avg":"#1e93c6","10.11.12.30":"#1e93c6"}</option>
        <option name="charting.fieldDashStyles">{"Avg":"solid","10.11.12.30":"solid"}</option>
        <option name="charting.gridLinesX.showMajorLines">1</option>
        <option name="charting.legend.mode">seriesCompare</option>
        <option name="displayview">analytics_workspace</option>
      </chart>
    </panel>
  </row>
</form>